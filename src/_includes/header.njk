<header id="site-header" class="pad">
  <section class="container flex">
    <a id="site-title" href="/">
      <span class="logo">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36">
          <path fill="none" d="M0 0H24V24H0z" />
          <path
            d="M21 3v2c0 3.866-3.134 7-7 7h-1v1h5v7c0 1.105-.895 2-2 2H8c-1.105 0-2-.895-2-2v-7h5v-3c0-3.866 3.134-7 7-7h3zM5.5 2c2.529 0 4.765 1.251 6.124 3.169C10.604 6.51 10 8.185 10 10v1h-.5C5.358 11 2 7.642 2 3.5V2h3.5z" />
        </svg>
      </span>
      {{ metadata.sitetitle }}
    </a>



    <nav id="site-menu" x-data="{ open: false }""
      x-init=" $watch('open', value=> console.log(value))">
      <button @click.prevent="open = !open" type="button" class="show-mobile">
        Menu
      </button>
      <ol class="flex" :class="open ? '' : 'hide-mobile'">
        <li>
          <a href="#">One</a>
        </li>
        <li>
          <a href="#">Two</a>
        </li>
        <li>
          <a href="#">Three</a>
        </li>
        <li>
          <a href="#">Four</a>
        </li>
        <li>
          <a href="#">Five</a>
        </li>
      </ol>
    </nav>
  </section>
</header>